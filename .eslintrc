{
  "env": {
    "es2021": true
  },
  "extends": [
    "airbnb/base",
    "plugin:node/recommended",
    "plugin:sonarjs/recommended"
  ],
  "plugins": [
    "sonarjs"
  ],
  "rules": {
    "global-require": "off",
    "no-unused-vars": "warn",
    "strict": [
      "error",
      "global"
    ],
    "no-console": "warn",
    "no-plusplus": "off",
    "no-tabs": "off",
    "prefer destructuring": "off",
    "no-alert": "warn",
    "comma-dangle": [
      "error",
      "never"
    ]
  }
}