{
  "env": {
    "es2021": true
  },
  "extends": [
    "airbnb/base",
    "plugin:node/recommended",
    "plugin:sonarjs/recommended"
  ],
  "plugins": [
    "sonarjs"
  ],
  "rules": {
    "global-require": "off",
    "no-unused-vars": "off",
    "strict": [
      "error",
      "global"
    ],
    "no-console": "off",
    "no-plusplus": "off",
    "no-tabs": "off",
    "sonarjs/no-duplicate-string": "off",
    "sonarjs/cognitive-complexity": "off",
    "max-len": [
      "error",
      {
        "code": 125
      }
    ],
    "node/no-unsupported-features/es-syntax": "off",
    "default-case": "warn",
    "no-fallthrough": "warn",
    "no-use-before-define": "off",
    "no-alert": "warn",
    "comma-dangle": [
      "error",
      "never"
    ]
  }
}