{
  "env": {
    "es2021": true
  },
  "extends": [
    "airbnb/base",
    "plugin:node/recommended",
    "plugin:sonarjs/recommended"
  ],
  "plugins": [
    "sonarjs"
  ],
  "rules": {
    "global-require": "off",
    "no-unused-vars": "off",
    "strict": [
      "error",
      "global"
    ],
    "import/no-unresolved": "off",
    "no-console": [
      "error",
      {
        "allow": [
          "error"
        ]
      }
    ],
    "no-plusplus": "off",
    "no-tabs": "off",
    "sonarjs/no-duplicate-string": "off",
    "max-len": [
      "error",
      {
        "code": 125
      }
    ],
    "node/no-missing-require": "off",
    "no-restricted-syntax": "off",
    "guard-for-in": "off",
    "node/no-unsupported-features/es-syntax": "off",
    "default-case": "warn",
    "no-fallthrough": "warn",
    "no-use-before-define": "off",
    "no-alert": "warn",
    "comma-dangle": [
      "error",
      "never"
    ]
  }
}